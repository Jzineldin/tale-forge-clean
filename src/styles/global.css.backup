/* Tailwind directives */
@tailwind base;
@tailwind components;
@tailwind utilities;

/* Import design tokens */
@import './design-tokens.css';

/* CLEAN GLOBAL STYLES - UNIFIED DESIGN SYSTEM */

/* Global backdrop */
.scene-bg {
  position: fixed;
  inset: 0;
  z-index: -2;
  background:
    url("https://cdn.midjourney.com/11bac597-89f4-4f16-99f0-4b114af4473f/0_2.png")
      center bottom / cover no-repeat;
  pointer-events: none;
}

/* UNIFIED FONT SYSTEM - ONLY INTER */
* {
  font-family: 'Inter', sans-serif;
  box-sizing: border-box;
}

html, body, #root {
  background: transparent;
  color-scheme: light dark;
  height: 100%;
  margin: 0;
  padding: 0;
}

/* Typography hierarchy - all Inter */
h1, h2, h3 {
  font-family: 'Inter', sans-serif;
  font-weight: 600;
  line-height: 1.3;
  padding-bottom: 0.2em;
  text-shadow:
    0 1px 1px rgba(0, 0, 0, 0.5),
    0 1px 2px rgba(0, 0, 0, 0.2);
}

p {
  font-family: 'Inter', sans-serif;
  line-height: 1.6;
  padding-bottom: 0.2em;
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.3);
}

/* Body text and paragraphs */
p, span, div {
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.3);
}

/* Smaller text elements */
small, .subtitle, .description {
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
}

/* Buttons text */
button, .btn, .button {
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
}

/* Navigation text */
nav, .nav, .navigation {
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.3);
}

/* Form labels and input placeholders */
label, input::placeholder {
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
}

/* Specific overrides for very large hero text */
.hero-title, .main-title {
  text-shadow:
    0 1px 2px rgba(0, 0, 0, 0.6),
    0 2px 4px rgba(0, 0, 0, 0.2);
}

/* Story display specific text shadows */
.story-text-section h1,
.story-text-section h2,
.story-text-section h3,
.story-text-section h4,
.story-text-section h5,
.story-text-section h6 {
  text-shadow:
    0 1px 1px rgba(0, 0, 0, 0.5),
    0 1px 2px rgba(0, 0, 0, 0.2);
}

.story-text-section p,
.story-text-section span,
.story-text-section div {
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.3);
}

/* Card content text shadows */
.card h1, .card h2, .card h3, .card h4, .card h5, .card h6 {
  text-shadow:
    0 1px 1px rgba(0, 0, 0, 0.5),
    0 1px 2px rgba(0, 0, 0, 0.2);
}

.card p, .card span, .card div {
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.3);
}

/* Navigation and header text shadows */
nav, .nav, .navigation, header {
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.3);
}

/* Clean text contrast */
.text-high-contrast {
  color: #FFFFFF;
  text-shadow: 0 1px 1px rgba(0,0,0,0.2);
}

.text-readable {
  color: #F8F9FA;
  text-shadow: 0 1px 1px rgba(0,0,0,0.1);
}
